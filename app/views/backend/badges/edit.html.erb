<div class="grid">
	<div class="row">
		<div class="c12">
			<h4>Badge Management</h4>


			<div class="row">
				<div class="c8">
					<%= form_for(@badge, :url => backend_badge_path, :method => :patch) do |f| %>
					<%= render 'form', :f => f %>
					<div class="row">
						<div class="c12"><%= f.submit 'Update Badge' %></div>
					</div>
					<% end %>
				</div>

				<div class="c4">
					<%= image_tag @badge.bgraphic %>
				</div>
			</div>
			

		</div>
	</div>
</div>