<!-- Join Event Form -->
<%= form_tag join_event_path do %>
<h5>Join an Event</h5>
<div class="row">
	<div class="c12"><input type="text" name="code" placeholder="enter event code" /></div>
</div>
<div class="row">
	<div class="c12"><select name="team"><%= options_for_select(teams_array) %></select></div>
</div>
<div class="row pad">
	<div class="c12"><input type="submit" value="Join Event" /></div>
</div>
<% end %>